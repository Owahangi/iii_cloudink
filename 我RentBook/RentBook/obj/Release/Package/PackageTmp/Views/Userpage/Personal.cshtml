@model RentBook.Models.Userpage.userpage.doubleClass1

@{
    ViewBag.Title = "Personal";
    Layout = "~/Views/Shared/layout_userpage.cshtml";
}
<article class="container py-5 px-5" id="content">
    @foreach (var i in Model.userInfo)
    {

        <div style="display:flex">
            <div>
                <img style="width:144px;height:144px;max-height:144px;max-width:144px;" src="~/會員照片/@Html.DisplayFor(modelItem=>i.m_Image)">
            </div>
            <div style="margin-left:50px;display:flex;align-items:center;">
                <div>

                    <h2>@Html.DisplayFor(modelItem => i.m_Alias)</h2>
                </div>
            </div>
        </div>
        <hr style="background-color: white;">
        <div style="height:70px;padding:15px;" class="mb-5">
            <p>@Html.DisplayFor(modelItem => i.m_Intro)</p>
        </div>

    }

        <div class="mt-5">
            <h3>最近讀過</h3>
            <hr style="background-color: white;">
            <div class="row" style="padding:15px;">
                @foreach (var i in Model.bookInfo)
                {
                    <div class="col">
                        <div class="col col-lg-4 text-center">
                            <img style="background-size:contain;width:auto;height:170px;max-height:170px;" src="~/書籍素材/@Html.DisplayFor(modelItem => i.b_Type)素材/@Html.DisplayFor(modelItem => i.b_id)/@Html.DisplayFor(modelItem => i.b_Image)">
                        </div>
                        <p>@Html.DisplayFor(modelItem => i.b_Name)</p>
                        <p>@Html.DisplayFor(modelItem => i.a_Name)</p>
                    </div>
                }
                </div>

        </div>

   
</article>
