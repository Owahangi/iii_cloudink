        b_name_4 = "";
        b_info_4 = "";
        b_image_4 = "";
        b_type_4 = "";
        b_id_4 = "";
        int i = 0;


        if (reader.HasRows)
        {
            while (reader.Read())
            {
                i++;

                if (i == 1)
                {
                    b_name_1 = reader["b_name"].ToString();
                    b_info_1 = reader["b_info"].ToString();
                    b_image_1 = reader["b_image"].ToString();
                    b_type_1 = reader["b_type"].ToString();
                    b_id_1 = reader["b_id"].ToString();
                }
                else if (i == 2)
