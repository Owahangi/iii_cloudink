@using RentBook.Models
@model List<RentBook.Models.Userpage.wishlistClass>
@{
    ViewBag.Title = "WishList";
    Layout = "~/Views/Shared/layout_userpage.cshtml";
}
<style>
    p {
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
    }
</style>
<article class="container py-5 px-5" id="content">
    <h2>WishList</h2>
    <hr style="background-color: white;">
    @{foreach (var i in Model)
        {
            <div class="row mt-4">
                <div class="col col-md-4 text-center align-self-center">
                    <a href="../CV/BookPage?bid=@Html.DisplayFor(modelItem => i.b_id)">
                        <img style="background-size:contain;width:auto;height:170px;max-height:170px;" src="~/書籍素材/@Html.DisplayFor(modelItem => i.b_Type)素材/@Html.DisplayFor(modelItem => i.b_id)/@Html.DisplayFor(modelItem => i.b_Image)">
                    </a>
                </div>
                <div class="col col-md-8">
                    <p>@Html.DisplayFor(modelItem => i.b_Name)</p>
                    <p>@Html.DisplayFor(modelItem => i.a_Name)</p>
                    <p>@Html.DisplayFor(modelItem => i.b_Info)</p>
                    <p>$@Html.DisplayFor(modelItem => i.b_DatePrice)/per date</p>
                </div>
            </div>
        }
    }

</article>
