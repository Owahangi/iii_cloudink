@model RentBook.Models.ReadBooksModel
@{
    ViewBag.Title = "ReadBookContent";
    Layout = "~/Views/Shared/ReadBook.cshtml";
}


<br>


<h3 class="section-heading " style="text-align:center;">@Model.傳回書籍章節標題</h3>
<br>
<!--1段-->
<div>
    <p id="edit" class="intro myfont1">

        @foreach (string c in Model.小說書籍內容)
        {

            if (c != "")
            {
                @c
            }
            else
            {
                <br />
                <br />

            }

        }
    </p>

</div>


<hr>



<div class="container-fluid">

    <div class="row mb-3">
        <div class="col-3">

            <nav class="pagination-outer" aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item">
                        @*<a href="#" class="page-link" aria-label="Previous">
                            上一章
                        </a>*@
                        @if (Model.bc_Chapters > 1)
                        {
                            @Html.ActionLink("上一章", "ReadBookContent", "ReadBooks", new { b_id = Model.b_id, bc_Chapters = Model.bc_Chapters - 1 }, new { @class = "page-link" })
                        }
                        
                    </li>
                    <li></li>
                </ul>
            </nav>
        </div>
        <div class="col-6">
            @Html.ActionLink("回到大綱", "BookPage", "CV", new {bid = Model.b_id },new {@class= "btn btn-primary btn-block mybutton5" })         

        </div>

        <div class="col-3">

            <nav class="pagination-outer" aria-label="Page navigation">
                <ul class="pagination">
                    <li></li>

                    <li class="page-item">
                        @if (Model.bc_Chapters<Model.傳回書籍最大章節數)
                        {
                            @Html.ActionLink("下一章", "ReadBookContent", "ReadBooks", new { b_id = Model.b_id, bc_Chapters = Model.bc_Chapters + 1 }, new { @class = "page-link" }); 
                        }
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

