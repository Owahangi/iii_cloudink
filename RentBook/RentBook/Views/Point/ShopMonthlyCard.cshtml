@model List<RentBook.Models.Point.PointModel>

@{
    ViewBag.Title = "ShopMonthlyCard";
}

<h2>ShopMonthlyCard</h2>


@using (Html.BeginForm("SaveMonthlyCard", "Point", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <table class="table">
            <tr>
                <th>
                </th>
                <th>
                </th>
                <th>
                </th>
                <th>
                    月卡名稱
                </th>
                <th>
                    月卡價格
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="hidden" name="m_id" value="@item.m_id" />
                    </td>
                    <td>
                        <input type="hidden" name="bmc_id" value="@item.bmc_id">
                    </td>
                    <td>
                        <input type="hidden" name="bmc_Date" value="@item.bmc_Date">
                    </td>
                    <td>
                        <label name="bmc_Name" value="@item.bmc_Name">@item.bmc_Name</label>
                    </td>
                    <td>
                        <label name="bmc_Price" value="@item.bmc_Price">@item.bmc_Price 元</label>
                    </td>
                    <td>
                        <input type="submit" value="立即購買" class="btn btn-default" />
                    </td>
                </tr>
            }
        </table>
    </div>
}