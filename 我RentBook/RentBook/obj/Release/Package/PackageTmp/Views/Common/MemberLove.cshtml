                    b_image_2 = reader["b_image"].ToString();
                    b_type_2 = reader["b_type"].ToString();
                    b_id_2 = reader["b_id"].ToString();
                }
                else if (i == 3)
                {
                    b_name_3 = reader["b_name"].ToString();
                    b_info_3 = reader["b_info"].ToString();
                    b_image_3 = reader["b_image"].ToString();
                    b_type_3 = reader["b_type"].ToString();
                    b_id_3 = reader["b_id"].ToString();
                }
                else if (i == 4)
                {
                    b_name_4 = reader["b_name"].ToString();
                    b_info_4 = reader["b_info"].ToString();
                    b_image_4 = reader["b_image"].ToString();
                    b_type_4 = reader["b_type"].ToString();
                    b_id_4 = reader["b_id"].ToString();
                }
            }
        }

        con.Close();



    }

    Layout = "~/Views/Shared/_MemberCentreLayout.cshtml"; }

