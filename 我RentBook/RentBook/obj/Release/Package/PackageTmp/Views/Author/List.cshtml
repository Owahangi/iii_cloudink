@model IEnumerable<RentBook.Models.Author.AuthorModel>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_AddBook2.cshtml";
}



<!-- 模糊搜尋 a_id a_Name-->
<form method="post">
    <input type="text" name="txtkeyword" /> <input type="submit" value="查詢" />
</form>

    <h3>@Html.ActionLink("新增作者", "Create")</h3>
<table class="table">
    <tr>
        <th>
            作者照片
        </th>
        <th>
            作者編號
        </th>
        <th>
            作者名稱
        </th>
        <th>
            作者生日
        </th>
        <th>
            作者點數
        </th>
        <th>
            作者 Email
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        <img style="width:150px;" name="a_Image" src="~/作者照片/@item.a_Image" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.a_id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.a_Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.a_Birth)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.a_Point)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.a_Email)
    </td>
    <td>
        @Html.ActionLink("修改", "Edit","Author", new { aid=item.a_id },null) 
        @*@Html.ActionLink("刪除", "Delete", new { /* id=item.PrimaryKey */ })*@
    </td>
</tr>
}

</table>
