
@{
    ViewBag.Title = "AddBook";
}

<h2>AddBook</h2>

<body>
    <div class="container myfont1">
        <div class="card">
            <div class="card-body">
                <div class="card-title"><h4>新增書籍資料</h4></div>
                <form action="~/AddBook/SaveNewBook" method="POST" enctype="multipart/form-data">
                    <!-- 第一步驟 上傳書籍基本資料-->
                    <div class="form-group">
                        <label>書籍名稱</label>
                        <input type="text" name="BookName">
                    </div>

                    <div class="form-group">
                        <label>書籍簡介</label>
                        <textarea rows="5" name="BookInfo"></textarea>
                    </div>

                    <div class="form-group">
                        <label>上傳書籍封面：</label>
                        <input type="file" name="Image">
                    </div>

                    <div class="form-group">
                        <label>書籍分類：</label>
                        <select name="Booktype">
                            <option value="0" disabled>請選擇...</option>
                            <option value="小說">小說</option>
                            <option value="漫畫">漫畫</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>出版日期：</label>
                        <input type="date" name="PublishedDate" max="2020-12-31" min="1900-01-01">
                    </div>

                    <div class="form-group">
                        <label>作者</label>
                        <input type="text" name="AuthorName">
                    </div>

                    <div class="form-group">
                        <label>小時/價格</label>
                        <input type="text" name="HourPrice">
                    </div>

                    <div class="form-group">
                        <label>ISBN</label>
                        <input type="text" name="ISBN">
                    </div>

                    <div class="form-group">
                        <label>年齡分級</label>
                        <input type="text" name="AgeRange">
                    </div>

                    <div class="form-group">
                        <label>連載情況</label>
                        <div class="border">
                            <div class="form-check">
                                <input type="radio" class="form-check-input" name="Series" checked value="連載中">
                                <label class="form-check-label">連載中</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" name="Series" value="已完結">
                                <label class="form-check-label">已完結</label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>出版社</label>
                        <select name="PublishedIdName">
                            @foreach (string p in ViewBag.pIdName)
                            {
                                <option>@p</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label>作者</label>
                        <select name="AuthorIdName" multiple size="5">
                            @foreach (string p in ViewBag.aIdName)
                            {
                                <option value="@p">@p</option>
                            }
                        </select>
                    </div>

                    <!-- 第二步驟 上傳大綱-->
                    <div class="form-group">
                        <label>標題名稱</label>
                        <input type="text" name="Outline">
                    </div>

                    <!-- 第三步驟 上傳章節書籍檔 -->
                    <div class="form-group">
                        <label>上傳書籍各章節檔案：</label>
                        <input type="file" name="Image" multiple>
                    </div>

                    <button type="submit">送出資料</button>
                    <button type="submit" onclick="return false">下一步</button>
                </form>
            </div>
        </div>

    </div>
</body>