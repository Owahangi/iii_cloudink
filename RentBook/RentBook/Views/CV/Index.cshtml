@model RentBook.Books
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AddBookLayout.cshtml";

}

@using (Html.BeginForm(
    "Index",
    "CV",
    FormMethod.Post,
    new { enctype = "multipart/form-data" }
    ))
{
    @Html.AntiForgeryToken()
<form class="container">
    <div class="bs-stepper">
        <div class="bs-stepper-header" role="tablist">
            <div class="step" data-target="#step1">
                <button type="button" class="step-trigger" role="tab">
                    <span class="bs-stepper-circle">1</span>
                    <span class="bs-stepper-label">書籍資料</span>
                </button>
            </div>
            <div class="line"></div>
            <div class="step" data-target="#step2">
                <button type="button" class="step-trigger" role="tab">
                    <span class="bs-stepper-circle">2</span>
                    <span class="bs-stepper-label">新增章節標題</span>
                </button>
            </div>
            <div class="line"></div>
            <div class="step" data-target="#step3">
                <button type="button" class="step-trigger" role="tab">
                    <span class="bs-stepper-circle">3</span>
                    <span class="bs-stepper-label">上架成功</span>
                </button>
            </div>

        </div>
        <div class="bs-stepper-content" id="st">
            <div id="step1" class="content" role="tabpanel">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-2">書名:</label>
                    <div class="col-10">
                        @Html.EditorFor(model => model.b_Name, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.b_Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">簡介:</label>
                    <div class="col-10">
                        <textarea placeholder="請輸入簡介" rows="5" class="form-control" required="required" name="b_Info" id="b_Info"></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">照片:</label>
                    <div class="col-10">
                        <input type="file" required="required" name="image" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">分類:</label>
                    <div class="col-10">
                        <select class="form-control" name="b_Type" required="required" id="b_Type">
                            <option disabled>選擇分類</option>
                            <option value="1">小說</option>
                            <option value="2">漫畫</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">出版日期:</label>
                    <div class="col-10">
                        @Html.EditorFor(model => model.b_PublishedDate, new { htmlAttributes = new { @class = "form-control", type = "date", required = "required" } })
                        @Html.ValidationMessageFor(model => model.b_PublishedDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">價格/小時:</label>
                    <div class="col-10">
                        @Html.EditorFor(model => model.b_HourPrice, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.b_HourPrice, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">ISBN:</label>
                    <div class="col-10">
                        @Html.EditorFor(model => model.b_ISBN, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.b_ISBN, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">年齡分級:</label>
                    <div class="col-10">
                        @Html.EditorFor(model => model.b_AgeRating, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.b_AgeRating, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">讚數:</label>
                    <div class="col-10">
                        @Html.EditorFor(model => model.b_Likes, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.b_Likes, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">連載狀態:</label>
                    <div class="col-10">
                        <div class="border">
                            <div class="form-check" id="b_Series_yn" name="b_Series_yn">
                                <input type="radio" class="form-check-input" name="gender" value="1">
                                <label class="form-check-label">連載</label>
                            </div>
                            <div class="form-check" id="b_Series_yn" name="b_Series_yn">
                                <input type="radio" class="form-check-input" name="gender" value="2">
                                <label class="form-check-label">完結</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">出版社編號:</label>
                    <div class="col-10">
                        @*<select required="required" class="form-control">
                            <option disabled>出版社編號</option>
                            <option>A</option>
                            <option>B</option>
                        </select>*@
                        @Html.EditorFor(model => model.p_id, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.p_id, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                    <div class="col-md-offset-2 col-md-10">
                        <input type="button" id="button1" value="下一步" class="btn btn-block btn-primary" onclick="stepper.next()" />
                    </div>
                </div>
            </div>
            <div id="step2" class="content s2" role="tabpanel">
                <div class="col-10 form-group">
                    <label>章節:</label>
                    <br />
                    <input type="text" class="form-control" placeholder="請輸入章節" required="required" />
                </div>
                <div class="col-10 form-group">
                    <label>章節內容:</label>
                    <input type="file" class="" required="required" />
                </div>
                <div>

                    <button type="submit" class="btn btn-primary btn-block" onclick="stepper.previous()">上一步</button>
                    <button type="submit" class="btn btn-primary btn-block" onclick="stepper.next()">下一步</button>
                </div>
            </div>
            <div id="step3" class="content s3" role="tabpanel">
                @*<div class="col-10 form-group">
                    <label>內容檔案:</label>
                    <input type="file" class="form-control" required multiple />

                </div>
                <div>
                    <button type="button" class="btn btn-primary btn-block" onclick="stepper.previous()">上一步</button>
                    <button type="button" class="btn btn-primary btn-block" onclick="simulateSubmit()">建立書籍</button>
                </div>*@
                <div class="alert alert-success">
                    成功上架書籍!
                </div>
                <button type="submit" class="btn btn-primary btn-block" onclick="myclick()">回到第2步驟</button>
                <button type="submit" class="btn btn-primary btn-block" onclick="history.go(0)">結束新增</button>
            </div>

        </div>
    </div>
</form>

}
@section a {

<script src="https://cdn.jsdelivr.net/npm/bs-stepper@1.7.0/dist/js/bs-stepper.min.js"></script>
<script>
    var stepperElem = document.querySelector('.bs-stepper');
    var stepper = new Stepper(stepperElem);
    var done = false;
    var currStep = 1;
    history.pushState(currStep, '');

    //切換到步驟前觸發，呼叫e.preventDefault()可阻止切換
    stepperElem.addEventListener("show.bs-stepper", function (e) {
        if (done) { //若程序完成，不再切換
            e.preventDefault();
            return;
        }
    });
    //切換到步驟後觸發，e.detail.indexStep為目前步驟序號(從0開始)
    stepperElem.addEventListener("shown.bs-stepper", function (e) {
        var idx = e.detail.indexStep + 1;
        currStep = idx;
        //pushState()記下歷程以支援瀏覽器回上頁功能
        history.pushState(idx, '');
    })
    //瀏覽器上一頁下一頁觸發
    window.onpopstate = function (e) {
        if (e.state && e.state != currStep)
            stepper.to(e.state);
    };
    //模擬送出表單，註記已完成，不再允許切換步驟
    function simulateSubmit() {
        stepper.next();
        done = true;
    }

    function myclick() {
        window.history.back(-1);
    }



</script>
}
